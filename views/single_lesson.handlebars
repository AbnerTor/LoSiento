<header id="pageHeader" style="height: 50px;">
    <div id="headerWords homepage" class="text-lg lg:text-xl text-center">
        Guess the words before you flip!
    </div>
</header>

<div class="flip-card-board">
    {{#each cards}}

    <div class="flip-card-container">
        <div class="flip-card">

            <div id="cardFront" class="flip-card-front">
                <p>

                    {{this.en}}

                </p>
            </div>
            <div id="cardBack" class="flip-card-back">
                <p>
                    {{this.es}}
                </p>
            </div>
        </div>
    </div>

    {{/each}}
</div>